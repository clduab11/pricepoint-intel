# PricePoint Intel - Environment Configuration

# ============================================
# CORE APPLICATION SETTINGS
# ============================================
APP_NAME=PricePoint Intel
ENVIRONMENT=development
DEBUG=True
HOST=127.0.0.1
PORT=8050

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/pricepoint_intel
REDIS_URL=redis://localhost:6379/0

# ============================================
# PUBLIC DATA SOURCES (Free Tier)
# ============================================

# Federal Procurement Data
SAM_GOV_API_KEY=your_sam_gov_api_key_here
USA_SPENDING_API_KEY=your_usa_spending_key_here

# SEC Financial Filings
SEC_EDGAR_USER_AGENT=YourCompany YourEmail@example.com

# Geographic Data
OPENSTREETMAP_API_KEY=not_required

# ============================================
# PAID DATA SOURCES (Optional - Phase 2)
# ============================================

# Competitive Pricing Intelligence
INTELLIGENCE_NODE_API_KEY=your_intelligence_node_key
COMPETERA_API_KEY=your_competera_key

# Financial Data Providers
BLOOMBERG_API_KEY=your_bloomberg_key
FACTSET_API_KEY=your_factset_key

# ============================================
# AI/ML SERVICES (Phase 3)
# ============================================

# Large Language Models
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key

# ============================================
# NOTIFICATION SERVICES
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_app_password

# ============================================
# RATE LIMITING & PERFORMANCE
# ============================================
RATE_LIMIT_PER_MINUTE=60
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=10

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your_secret_key_generate_with_python_secrets
JWT_SECRET_KEY=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/pricepoint_intel.log